{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": {
    "Paper Trading": {
      "startCommand": "python scripts/run_paper_trading_simple.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30
    },
    "Data Collector": {
      "startCommand": "python scripts/run_data_collector.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30
    },
    "Feature Calculator": {
      "startCommand": "python scripts/run_feature_calculator.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30
    },
    "ML Retrainer Cron": {
      "startCommand": "python scripts/run_daily_retraining.py",
      "cronSchedule": "0 9 * * *",
      "restartPolicyType": "NEVER"
    },
    "Data Cleanup Cron": {
      "startCommand": "python scripts/daily_data_cleanup.py",
      "cronSchedule": "0 10 * * *",
      "restartPolicyType": "NEVER"
    },
    "ML Analyzer": {
      "startCommand": "python scripts/run_ml_analyzer.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    },
    "Data Scheduler": {
      "startCommand": "python src/services/data_scheduler.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    }
  }
}
