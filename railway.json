{
  "$schema": "https://railway.app/railway.schema.json",
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": {
    "Freqtrade - Trading Engine": {
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    },
    "Paper Trading": {
      "startCommand": "python scripts/run_paper_trading_simple.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30
    },
    "ML Retrainer Cron": {
      "startCommand": "python scripts/run_daily_retraining.py",
      "cronSchedule": "0 9 * * *",
      "restartPolicyType": "NEVER"
    },
    "Data Cleanup Cron": {
      "startCommand": "python scripts/daily_data_cleanup.py",
      "cronSchedule": "0 10 * * *",
      "restartPolicyType": "NEVER"
    },
    "ML Analyzer": {
      "startCommand": "python scripts/run_ml_analyzer.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    },
    "Data Scheduler": {
      "startCommand": "python src/services/data_scheduler.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    },
    "Trading Dashboard": {
      "startCommand": "python freqtrade_dashboard.py",
      "healthcheckPath": "/",
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    }
  }
}
