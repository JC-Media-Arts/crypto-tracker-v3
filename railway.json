{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": {
    "Paper Trading": {
      "startCommand": "python scripts/run_paper_trading.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30
    },
    "Data Collector": {
      "startCommand": "python scripts/run_data_collector.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30
    },
    "Feature Calculator": {
      "startCommand": "python scripts/run_feature_calculator.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 30
    },
    "ML Retrainer Cron": {
      "startCommand": "python scripts/run_daily_retraining.py",
      "cronSchedule": "0 9 * * *",
      "restartPolicyType": "NEVER"
    },
    "Slack Reporter": {
      "startCommand": "python scripts/run_slack_reporter.py",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 5,
      "healthcheckTimeout": 60
    }
  }
}
