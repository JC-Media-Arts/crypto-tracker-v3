{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": {
    "shadow-evaluator": {
      "name": "Shadow Evaluator",
      "source": ".",
      "builder": "NIXPACKS",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "python scripts/run_shadow_services.py",
      "healthcheckPath": "/",
      "healthcheckTimeout": 30,
      "environmentVariables": {
        "SERVICE_NAME": "shadow-evaluator",
        "LOG_LEVEL": "INFO",
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}
